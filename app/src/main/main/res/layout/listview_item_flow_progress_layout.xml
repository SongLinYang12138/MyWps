<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/white_back"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/paddingVertical"
    >
    <TextView
        android:id="@+id/flow_tv_date"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="  8-24 \n 14:24"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/text_gray"
        />
</RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="0.5dp"
            android:layout_height="19dp"
            android:background="@color/arrow" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/flow_item_iv_circle"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_red" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_centerInParent="true"
                android:background="@drawable/red_solid" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0.5dp"
            android:layout_height="110dp"
            android:layout_marginTop="-1dp"
            android:background="@color/arrow" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/paddingVertical"
        android:paddingBottom="@dimen/paddingVertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
       >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/flow_item_ll_icon"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/avatar" />

                <TextView
                    android:id="@+id/flow_tv_leader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="领导-0"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_large" />
            </LinearLayout>


            <TextView
                android:id="@+id/flow_tv_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/red_rect"
                android:layout_alignTop="@+id/flow_item_ll_icon"
                android:paddingBottom="@dimen/button_padding_top"
                android:paddingLeft="@dimen/button_padding_left"
                android:paddingRight="@dimen/button_padding_left"
                android:paddingTop="@dimen/button_padding_top"
                android:text="拟文"
                android:textColor="@color/rect_red"
                android:textSize="@dimen/button_text_small"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/flow_tv_opinion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingVertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="Lorem lpsum is simply dummy text of the printint and typesetting industry."
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>



</LinearLayout>