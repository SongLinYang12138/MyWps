<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色（蓝色）  -->
    <item  android:id="@android:id/background" >
        <shape>

            <gradient android:startColor="@color/arrow"
                android:endColor="@color/arrow" />
        </shape>
    </item>

    <!--  设置进度条颜色（红色）  -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>

                <gradient  android:startColor="@color/rect_orange"
                    android:endColor="@color/rect_orange" />
            </shape>
        </clip>
    </item>
</layer-list>