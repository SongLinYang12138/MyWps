<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:androiden="http://schemas.android.com/tools"
android:background="@color/white_back"
android:gravity="center_vertical"
android:orientation="horizontal"
android:paddingBottom="@dimen/paddingVertical"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/paddingVertical">

<RelativeLayout
    android:layout_width="50dp"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="45dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/stay_word" />

    <ImageView
        android:id="@+id/stay_iv_status"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-2dp"
        android:background="@mipmap/red_circle" />
</RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stay_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stay_tv_send"
            android:layout_alignBottom="@+id/stay_tv_send"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/stay_tv_send"
            android:text="号门成都环球"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/stay_tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="3dp"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="3dp"
            android:text="发文"
            android:background="@drawable/red_rect"
            android:textColor="@color/rect_red"
            android:textSize="@dimen/text_small"
          />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/stay_tv_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="2018-01-10 21:30"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/stay_tv_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="处理人: xxx"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_normal" />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>

