<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white_back"
    >

    <RelativeLayout
        android:id="@+id/material_rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/material_ll_bottom"
        >


    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/material_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="@color/stay_back"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_small"
            >

           <LinearLayout
               android:id="@+id/material_ll_document"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_centerInParent="true"
               >
               <com.example.ysl.mywps.ui.view.IconTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="&#xe793;"
                   android:gravity="center"
                   android:textSize="@dimen/icon_normal"
                   android:clickable="false"

                   />
               <TextView
                   android:id="@+id/material_tv_document"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="文件"
                   android:textSize="@dimen/text_small"
                   android:textColor="@color/text_gray"
                   android:clickable="false"
                   />
           </LinearLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_small"
            >
            <LinearLayout
                android:id="@+id/material_ll_transport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >
                <com.example.ysl.mywps.ui.view.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xe62e;"
                    android:gravity="center"
                    android:textSize="@dimen/icon_normal"
                    android:clickable="false"
                    />
                <TextView
                    android:id="@+id/material_tv_transport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="传输"
                    android:textSize="@dimen/text_small"
                    android:clickable="false"
                    />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>