<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_back"
    >
    <LinearLayout
        android:id="@+id/document_ll_inside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/paddingVertical"
            >

            <ImageView
                android:layout_width="@dimen/icon_normal"
                android:layout_height="@dimen/icon_normal"
                android:background="@mipmap/zhutihuodong" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/text_black"
                        android:text="内部公文"
                        android:layout_alignParentLeft="true"
                        />


                    <com.example.ysl.mywps.ui.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="&#xe679;"
                        android:textColor="@color/arrow"
                        android:textSize="@dimen/icon_normal"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
              android:layout_height="0.3dp"
            android:background="@color/arrow"
            android:layout_marginTop="@dimen/paddingVertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/out_document"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingVertical"
            >
            <ImageView
                android:layout_width="@dimen/icon_normal"
                android:layout_height="@dimen/icon_normal"
                android:background="@mipmap/zhutihuodong" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/text_black"
                        android:text="外部公文"
                        android:layout_alignParentLeft="true"
                        />


                    <com.example.ysl.mywps.ui.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="&#xe679;"
                        android:textColor="@color/arrow"
                        android:textSize="@dimen/icon_normal"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
               android:layout_height="0.3dp"
            android:background="@color/arrow"
            android:layout_marginTop="@dimen/paddingVertical"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/query_document"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingVertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/icon_normal"
                android:layout_height="@dimen/icon_normal"
                android:background="@mipmap/zhutihuodong" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/text_black"
                        android:text="经办查询"
                        android:layout_alignParentLeft="true"
                        />


                    <com.example.ysl.mywps.ui.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="&#xe679;"
                        android:textColor="@color/arrow"
                        android:textSize="@dimen/icon_normal"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/arrow"
            android:layout_marginTop="@dimen/paddingVertical"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/issue_document"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingVertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/icon_normal"
                android:layout_height="@dimen/icon_normal"
                android:background="@mipmap/zhutihuodong" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/text_black"
                        android:text="下发查询"
                        android:layout_alignParentLeft="true"
                        />


                    <com.example.ysl.mywps.ui.view.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="&#xe679;"
                        android:textColor="@color/arrow"
                        android:textSize="@dimen/icon_normal"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/arrow"
            android:layout_marginTop="@dimen/paddingVertical"
            />
    </LinearLayout>
</LinearLayout>