<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_group_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="群组的id"
        />
    <EditText
        android:id="@+id/et_member_appkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="成员所属appKey,不输入则默认为本appKey"
        />

    <EditText
        android:id="@+id/et_member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="禁言或取消禁言的群成员username"
        />

    <Button
        android:id="@+id/bt_keep_silence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="禁言"
        />

    <Button
        android:id="@+id/bt_keep_silence_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消禁言"
        />
</LinearLayout>
